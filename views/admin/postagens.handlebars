<h2 class="card-header display-3 card text-white bg-dark">POSTAGENS</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
    <div class="card text-white bg-dark mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <a href="/admin/postagens/edit/{{_id}}"><button class="btn btn-success mt-2">Editar postagem</button></a><br>
             <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-1">Deletar postagem</button></a>
        </div>
    </div>
{{else}}
{{/each}}